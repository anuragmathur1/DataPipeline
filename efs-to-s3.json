{
  "objects" : [
    {
      "id" : "Default",
      "scheduleType" : "cron",
      "failureAndRerunMode" : "CASCADE",
      "schedule" : {
        "ref" : "DefaultSchedule"
      },
      "name" : "Default",
      "role" : "DataPipelineDefaultRole",
      "resourceRole" : "DataPipelineDefaultResourceRole"
    },
    {
      "id" : "EC2ResourceObj",
      "terminateAfter" : "10 Minutes",
      "instanceType" : "#{myInstanceType}",
      "name" : "EC2ResourceObj",
      "type" : "Ec2Resource",
      "securityGroupIds" : [
        "#{mySrcSecGroupID}"
      ],
      "subnetId" : "#{mySubnetID}",
      "associatePublicIpAddress" : "true",
      "imageId" : "#{myImageID}"
    },
    {
      "id" : "DefaultSchedule",
      "name" : "Every Day",
      "startAt" : "FIRST_ACTIVATION_DATE_TIME",
      "type" : "Schedule",
      "period" : "1 Days"
    },
    {
      "id" : "ShellCommandActivityObj",
      "name" : "ShellCommandActivityObj",
      "runsOn" : {
        "ref" : "EC2ResourceObj"
      },
      "command" : "#{myShellCmd}",
      "scriptArgument" : [
        "#{myEfsSource}",
        "#{myEfsID}",
        "#{myS3DestinationPath}"
      ],
      "type" : "ShellCommandActivity",
      "stage" : "true"
    }
  ],
  "parameters" : [
    {
      "id" : "myShellCmd",
      "default" : "wget -O /tmp/efs-to-s3-backup.sh https://github.com/anuragmathur1/DataPipeline/blob/master/efs-to-s3.sh\nchmod a+x /tmp/efs-to-s3-backup.sh.sh\n/tmp/efs-to-s3-backup.sh $1 $2 $3",
      "description" : "Shell command to run.",
      "type" : "String"
    },
    {
      "id" : "myInstanceType",
      "default" : "t2.micro",
      "description" : "Instance type for creating backups.",
      "allowedValues" : [
        "t1.micro",
        "t2.small",
        "t2.medium"
      ],
      "type" : "String"
    },
    {
      "id" : "mySubnetID",
      "default" : "subnet-3a96145e",
      "description" : "VPC subnet for your backup EC2 instance (ideally the same subnet used for the production EFS mount point).",
      "type" : "String"
    },
    {
      "id" : "mySrcSecGroupID",
      "default" : "sg-8c45afeb",
      "description" : "Security group that can connect to the Production EFS mount point.",
      "type" : "String"
    },
    {
      "id" : "myInterval",
      "default" : "daily",
      "description" : "Interval for backups.",
      "allowedValues" : [
        "hourly",
        "daily",
        "weekly",
        "monthly"
      ],
      "type" : "String"
    },
    {
      "id" : "myEfsID",
      "default" : "backup-fs-1",
      "description" : "Name for the directory that will contain your backups.",
      "type" : "String"
    },
    {
      "id" : "myEfsSource",
      "default" : "10.0.1.32:/",
      "description" : "Production EFS mount target IP address.",
      "type" : "String"
    },
    {
      "id" : "myImageID",
      "default" : "ami-12345678",
      "description" : "AMI ID for the EC2 instance.",
      "type" : "String"
    },
    {
      "id" : "myS3DestinationPath",
      "default" : "s3://data-pipeline-am/backup-1",
      "description" : "Name of the S3 path that will be used as backup",
      "type" : "string"
    }
  ]
}
